#!/bin/sh

# Definición de variables
GREEN="\033[0;32m"
RED="\033[0;31m"
BOLD="\033[1m"
NC="\033[0m"
DIRECTORY="./"
ENCODING_OUT="UTF-8"

find "$DIRECTORY" -type f -iname "*.es.srt" | while read archivo; do
    ENCODING_IN=$(file -i "$archivo" | sed -n 's/.*charset=\([^;]*\)/\1/p')
    NAME=$(basename "$archivo")

    if [ "$ENCODING_IN" = "iso-8859-1" ]; then
        printf "Convirtiendo $NAME (de $ENCODING_IN a $ENCODING_OUT)...\n"
        iconv -f "$ENCODING_IN" -t "$ENCODING_OUT" "$archivo" > "$archivo.temp" && mv "$archivo.temp" "$archivo"
        
        # Verificar si la conversión fue exitosa
        if [ $? -eq 0 ]; then
            printf "${GREEN}${BOLD}¡Conversión exitosa!${NC}\n"
        else
            printf "${RED}${BOLD}Error al convertir el archivo $NAME${NC}\n"
        fi
    fi
done
